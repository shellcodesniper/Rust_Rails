<%= stylesheet_link_tag '//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css'%>
<%= javascript_include_tag '//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js'%>

<% content_for(:side_bar) do %>
<%= render 'shared/navbar', :current => "jail" %>
<% end %>
<% content_for(:footer) do %>
<%= render 'shared/footer' %>
<% end %>

<div class="container">

	<h1>실시간 제재내역 [100개] - 전서버 공통</h1>
	<div class="table-responsive">
	<table id="Jails" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
		<thead>
			<tr>
				<th>서버</th>
				<th>제재종류</th>
				<th>내용</th>
				<th>이유</th>
				<th>등록자</th>
				<th>상세보기</th>
			</tr>
		</thead>
		<tbody>
			<% @jails.reverse.first(100).each do |jail| %>
			<tr>
				<td><%= jail.server %></td>
				<td><%= jail.title %></td>
				<td><%= jail.player.name %></td>
				<td><%= jail.reason %></td>
				<td><%= jail.judger %></td>
				<td><%= link_to 'Show', jail %></td>
			</tr>
			<% end %>
		</tbody>
	</table>

	<script>
$(document).ready(function () {
$('#Jails').DataTable({
	 "lengthMenu": [[25, 50, -1], [25, 50, "All"]]
});
$('.dataTables_length').addClass('bs-select');
});
</script>
</div>
	<br>

</div